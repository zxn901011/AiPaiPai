<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_scene"
    tools:context="com.zxn.aipaipai.activity.SplashActivity">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameWrapper"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            app:hintTextAppearance="@android:color/black"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="手机号/邮箱"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/usernameWrapper"
            app:hintTextAppearance="@android:color/black"
            android:id="@+id/passwordWrapper"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_password"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/passwordWrapper"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_register"
                android:text="注册"
                android:textColor="@android:color/black"
                android:background="@drawable/btn_start_selector"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/btn_login"
                android:text="登陆"
                android:background="@drawable/btn_start_selector"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/btn_correct"
                android:text="修改密码"
                android:background="@drawable/btn_start_selector"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
